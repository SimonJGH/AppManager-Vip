<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rect_solid_blue_border_white_5"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".HomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="15dp"
        android:background="@drawable/rect_solid_blue_border_white_5"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="安装包信息："
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_apk_info"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableRight="@mipmap/arrow_down"
            android:gravity="center_vertical"
            android:paddingRight="15dp"
            android:text="请选择"
            android:textColor="@color/white"
            android:textSize="15sp" />
    </LinearLayout>

    <!--app选择-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="5dp"
        android:text="请选择上传app名称"
        android:textColor="@color/white"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_app_name"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/rect_solid_blue_border_white_5"
        android:drawableRight="@mipmap/arrow_down"
        android:gravity="center"
        android:paddingRight="15dp"
        android:text="请选择"
        android:textColor="@color/white"
        android:textSize="15sp" />

    <!--填写apk文件类型-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="5dp"
        android:text="请选择上传apk类型"
        android:textColor="@color/white"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_apk_version"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/rect_solid_blue_border_white_5"
        android:drawableRight="@mipmap/arrow_down"
        android:gravity="center"
        android:paddingRight="15dp"
        android:text="请选择"
        android:textColor="@color/white"
        android:textSize="15sp" />

    <!--填写apk版本号信息-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@drawable/rect_solid_blue_border_white_5"
        android:orientation="vertical"
        android:padding="10dp">

        <EditText
            android:id="@+id/et_apk_version"
            style="@style/MyEditText"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:hint="请输入apk版本号"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="15sp" />

    </LinearLayout>

    <!--填写app更新介绍-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@drawable/rect_solid_blue_border_white_5"
        android:orientation="vertical"
        android:padding="10dp">

        <EditText
            android:id="@+id/et_app_introduce"
            style="@style/MyEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入app更新介绍"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="15sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:gravity="center"
        android:orientation="horizontal">
        <!--上传-->
        <TextView
            android:id="@+id/tv_apk_upload"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/rect_solid_blue_border_white_50"
            android:gravity="center"
            android:text="apk上传"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <!--更新-->
        <TextView
            android:id="@+id/tv_apk_update"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="50dp"
            android:background="@drawable/rect_solid_blue_border_white_50"
            android:gravity="center"
            android:text="apk更新"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>